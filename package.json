{
  "name": "squawk",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "predeploy": "npx webpack",
    "deploy": "gh-pages -d build"
  },
  "dependencies": {
    "@pixi/react": "^7.0.3",
    "@types/node": "^18.16.3",
    "@types/react": "^18.2.2",
    "@types/react-dom": "^18.2.3",
    "ape-ecs": "^1.3.1",
    "pixi.js": "^7.2.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "typescript": "^5.0.4",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "webpack-cli": "^5.1.4"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "settings": {
      "import/resolver": {
        "alias": {
          "map": [
            [
              "~",
              "./src/"
            ]
          ],
          "extensions": [
            ".ts",
            ".js",
            ".tsx",
            ".jsx"
          ]
        }
      }
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }  
}

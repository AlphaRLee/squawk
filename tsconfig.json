{
  "compilerOptions": {
    "outDir": "./build/",
    "sourceMap": true,
    "module": "es6",
    "target": "es6",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "./build/**/*"],
  "include": ["src", "index.d.ts"],
  "paths": {
    "~*": ["./src/*"],
   }
}